CC=clang++
CFLAGS=-Wall -g -fPIC -std=c++14 -I/usr/local/Cellar/openssl/1.0.2o_2/include -lstdc++

TARGET = libsign.dylib 
 
SRCS := $(wildcard *.cpp)  
 
OBJS := $(patsubst %cpp, %o, $(SRCS))  
 
all: $(TARGET)  
 
$(TARGET): $(OBJS)  
	$(CC) $(CFLAGS) -shared -fPIC -o $@ $^
%.o:%.cpp
	$(CC) $(CFLAGS) -c $<
 
clean:  
	rm -f *.o $(TARGET)
